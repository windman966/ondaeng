<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".HealthCheck2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/header"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="open"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="건강체크"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goToMyCorrection"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="댕댕이"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eyeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/eyeButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="눈이 튀어나옴"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eyeButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="눈동자 중앙이 하얗게 탁해짐"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eyeButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="빨갛게 충혈된 눈"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eyeButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="눈 주변 살이 처짐"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eyeButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="투명하지 않은 과도한 눈물"
                android:textSize="15sp" />

            <Button
                android:id="@+id/eyeButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="노란색 또는 녹색 눈곱"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/earLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/earButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="황갈색 귀지에 고름"
                android:textSize="15sp" />

            <Button
                android:id="@+id/earButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="초콜릿색 귀지"
                android:textSize="15sp" />

            <Button
                android:id="@+id/earButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="검은색 피부의 귀"
                android:textSize="15sp" />

            <Button
                android:id="@+id/earButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="하얀색 피부의 귀"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/faceButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="얼굴 전체가 불어남"
                android:textSize="15sp" />

            <Button
                android:id="@+id/faceButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="눈 아래 피부가 불어나거나 염증이 생김"
                android:textSize="15sp" />

            <Button
                android:id="@+id/faceButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="코 주위가 벗겨짐"
                android:textSize="15sp" />

            <Button
                android:id="@+id/faceButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="코가 마름"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mouthLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/mouthButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="노란색 잇몸 또는 혀"
                android:textSize="15sp" />

            <Button
                android:id="@+id/mouthButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="하얀색 잇몸 또는 혀"
                android:textSize="15sp" />

            <Button
                android:id="@+id/mouthButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="파란색(보라색) 잇몸 또는 혀"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/actionButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자꾸 벽에 부딪힘"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="머리를 지속적으로 갸우뚱 거림"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="계속 한자리에서 빙글빙글 돔"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="벽에 머리를 박고 밀고 있음"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="계속 몸을 떨고 있음"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="발작"
                android:textSize="15sp" />

            <Button
                android:id="@+id/actionButton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="갑자기 공격적으로 변함"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/boneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/boneButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="한쪽이나 양쪽 다리를 절음"
                android:textSize="15sp" />

            <Button
                android:id="@+id/boneButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="다리가 뻣뻣하고 부자연스러움"
                android:textSize="15sp" />

            <Button
                android:id="@+id/boneButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="계단, 소파 등에서 이전과 다르게 망설임"
                android:textSize="15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/Healthckeck_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:visibility="gone" />

    </LinearLayout>
    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>