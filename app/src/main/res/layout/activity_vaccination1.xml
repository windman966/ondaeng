<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vaccination1Activity">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFEB3B">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout"
        android:layout_alignParentStart="false"
        android:layout_marginTop="99dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="심장사상충"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기록이 없습니다."
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/registerButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="등록" />

            <Button
                android:id="@+id/changeButton"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="invisible" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="광견병"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTextView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기록이 없습니다."
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/registerButton2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="등록" />

            <Button
                android:id="@+id/changeButton2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="invisible" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="코로나장염"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTextView3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기록이 없습니다."
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/registerButton3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="등록" />

            <Button
                android:id="@+id/changeButton3"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="invisible" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="종합백신"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTextView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기록이 없습니다."
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/registerButton4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="등록" />

            <Button
                android:id="@+id/changeButton4"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="켄넬코프"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTextView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="기록이 없습니다."
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/registerButton5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="등록" />

            <Button
                android:id="@+id/changeButton5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>

