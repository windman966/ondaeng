<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#cab8ff "
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginEnd="0dp"
            app:srcCompat="@drawable/ic_baseline_account_box_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nickNameOnNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_weight="0"
            android:fontFamily="@font/nanumsquareroundeb"
            android:gravity="center"
            android:text="닉네임"
            android:textSize="30dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="vertical">

                <Button
                    android:id="@+id/goToWalk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="산책하기"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_pets"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToQuest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="퀘스트"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_star_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToCareVaccin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="예방접종"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_calendar_today_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToCareHealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="건강체크"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_library_add_check_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToCareDaily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="daily 기록"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_edit_note_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToComm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="커뮤니티"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_message_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <!--        임시-->

                <Button
                    android:id="@+id/goToHosp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="병원 정보"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_local_hospital_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToMyPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="마이페이지"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_contact_page_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />

                <Button
                    android:id="@+id/goToShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center|start|center_horizontal"
                    android:paddingStart="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="코인샵"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_baseline_shopping_cart_24"
                    app:iconPadding="40dp"
                    app:iconTint="#584F73" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

